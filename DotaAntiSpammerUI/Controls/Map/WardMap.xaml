<UserControl x:Class="DotaAntiSpammerNet.Controls.Map.WardMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:map="clr-namespace:DotaAntiSpammerNet.Controls.Map"
             mc:Ignorable="d" Height="420" Width="460">
    <Border BorderThickness="5 5 0 0" Name="Border" BorderBrush="Silver" ClipToBounds="True">
        <Canvas ClipToBounds="True">
            <Canvas>
                <Image Source="../../map.jpg" Width="460" Canvas.Top="-20" Canvas.Left="-5" Margin="0" />
                <Image Source="../../mine.png" Name="Mine" Width="30" Visibility="Hidden" />
                <Image Source="../../obs.png" Name="Obs" Visibility="Hidden" />
                <Image Source="../../sentry.png" Name="Sentry" Visibility="Hidden" />
                <Image Name="Image" Source="../../icons/abaddon.png" Width="60" />
                <map:CanvasWithBitmap x:Name="Cnv"  Width="460" Canvas.Top="-20" Canvas.Left="-5"  />
            </Canvas>
        </Canvas>
    </Border>
</UserControl>